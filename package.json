{
  "name": "changelogen",
  "version": "0.3.5",
  "description": "Generate Beautiful Changelogs using Conventional Commits",
  "repository": "unjs/changelogen",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "changelogen": "./dist/cli.mjs"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "changelogen": "jiti ./src/cli.ts",
    "dev": "vitest dev",
    "lint": "eslint --ext .ts,.js,.mjs,.cjs .",
    "prepack": "unbuild",
    "release": "pnpm test && pnpm changelogen --release && git push --follow-tags && pnpm publish",
    "test": "pnpm lint && vitest run --coverage"
  },
  "dependencies": {
    "c12": "^0.2.13",
    "consola": "^2.15.3",
    "convert-gitmoji": "^0.1.2",
    "execa": "^6.1.0",
    "mri": "^1.2.0",
    "node-fetch-native": "^0.1.8",
    "pkg-types": "^0.3.5",
    "scule": "^0.3.2",
    "semver": "^7.3.8"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config-typescript": "^11.0.0",
    "@types/node": "^18.11.0",
    "@types/semver": "^7.3.12",
    "@vitest/coverage-c8": "^0.24.3",
    "eslint": "^8.25.0",
    "jiti": "^1.16.0",
    "standard-version": "^9.5.0",
    "typescript": "^4.8.4",
    "unbuild": "^0.9.4",
    "vitest": "^0.24.3"
  },
  "packageManager": "pnpm@7.13.4"
}
