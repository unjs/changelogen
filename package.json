{
  "name": "changelogen",
  "version": "0.4.1",
  "description": "Generate Beautiful Changelogs using Conventional Commits",
  "repository": "unjs/changelogen",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "changelogen": "./dist/cli.mjs"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "changelogen": "jiti ./src/cli.ts",
    "dev": "vitest dev",
    "lint": "eslint --ext .ts,.js,.mjs,.cjs . && prettier -c src test",
    "prepack": "unbuild",
    "release": "pnpm test && pnpm changelogen --release && git push --follow-tags && pnpm publish",
    "test": "pnpm lint && vitest run --coverage"
  },
  "dependencies": {
    "c12": "^1.1.2",
    "consola": "^2.15.3",
    "convert-gitmoji": "^0.1.3",
    "execa": "^7.0.0",
    "mri": "^1.2.0",
    "node-fetch-native": "^1.0.2",
    "pkg-types": "^1.0.2",
    "scule": "^1.0.0",
    "semver": "^7.3.8"
  },
  "devDependencies": {
    "@types/node": "^18.14.2",
    "@types/semver": "^7.3.13",
    "@vitest/coverage-c8": "^0.29.2",
    "eslint": "^8.35.0",
    "eslint-config-unjs": "^0.1.0",
    "jiti": "^1.17.1",
    "prettier": "^2.8.4",
    "standard-version": "^9.5.0",
    "typescript": "^4.9.5",
    "unbuild": "^1.1.2",
    "vitest": "^0.29.2"
  },
  "packageManager": "pnpm@7.28.0"
}
