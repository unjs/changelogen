{
  "name": "@phojie/changegear",
  "version": "0.5.5",
  "description": "Generate Beautiful Changelogs using Conventional Commits",
  "repository": "phojie/changegear",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "changegear": "./dist/cli.mjs"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "changegear": "jiti ./src/cli.ts",
    "dev": "vitest dev",
    "lint": "eslint --ext .ts,.js,.mjs,.cjs . && prettier -c src test",
    "lint:fix": "eslint --fix --ext .ts,.js,.mjs,.cjs . && prettier -w src test",
    "prepack": "unbuild",
    "release": "pnpm test && pnpm changegear --release --push && pnpm publish",
    "test": "pnpm lint && vitest run --coverage"
  },
  "dependencies": {
    "c12": "^1.5.1",
    "colorette": "^2.0.20",
    "consola": "^3.2.3",
    "convert-gitmoji": "^0.1.3",
    "execa": "^8.0.1",
    "mri": "^1.2.0",
    "node-fetch-native": "^1.4.1",
    "ofetch": "^1.3.3",
    "open": "^9.1.0",
    "pathe": "^1.1.1",
    "pkg-types": "^1.0.3",
    "scule": "^1.1.0",
    "semver": "^7.5.4",
    "std-env": "^3.5.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.9.2",
    "@types/semver": "^7.5.5",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.54.0",
    "eslint-config-unjs": "^0.2.1",
    "jiti": "^1.21.0",
    "prettier": "^3.1.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.3.2",
    "unbuild": "^2.0.0",
    "vitest": "^0.34.6"
  },
  "packageManager": "pnpm@8.10.5"
}
